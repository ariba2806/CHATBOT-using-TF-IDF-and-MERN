   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
      <link rel="stylesheet" href="../css/style.css">
      <style>
      
body {
  background:white;
  background-size: cover;
  font-family: 'Open Sans', sans-serif;
  font-size: 14px;
  line-height: 1.3;
  overflow-y: scroll;
  background: rgb(248,247,248);
background: linear-gradient(180deg, rgba(248,247,248,1) 29%, rgba(195,237,248,1) 92%);

}

.bg {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
  /* background: url("https://images.unsplash.com/photo-1451186859696-371d9477be93?crop=entropy&fit=crop&fm=jpg&h=975&ixjsv=2.1.0&ixlib=rb-0.3.5&q=80&w=1925") no-repeat 0 0; */
  -webkit-filter: blur(80px);
          filter: blur(80px);
  -webkit-transform: scale(1.2);
          transform: scale(1.2);
}

/*--------------------
Chat
--------------------*/
.chat {
  position: absolute;
  top: 50%;
  left:60%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  width: 45%;
  margin-left:10px;
  height: 100vh;
  max-height: 700px;
  z-index: 2;
  overflow-y: scroll;
  box-shadow: 2px 10px 10px #888888;
  background: white;
  border-radius: 20px;
  display: flex;
  justify-content: space-between;
  flex-direction: column
}
.ariba{
  width:45%;
  
  box-shadow: 2px 10px 10px #888888;
  border-radius: 20px;
   display: flex;
  justify-content: space-between;
  flex-direction: column
}
 .messages {
  flex: 1 1 auto;
  color: grey;
  overflow: hidden;
  position: relative;
  width: 100%;
}
.messages .message {
  clear: both;
  float: left;
  padding: 8px 10px 7px;
  border-radius: 10px 10px 10px 0;
  background: LightSkyBlue;
  margin: 8px 0;
  font-size: 13px;
  line-height: 1.4;
  margin-left: 35px;
  margin-top:25px;
  margin-bottom:20px;
  position: relative;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
    box-shadow: 5px 10px 18px 1px #888888;
}
.messages .message .avatar {
  position: absolute;
  z-index: 1;
  bottom: -15px;
  left: -35px;
  border-radius: 30px;
  width: 30px;
  height: 30px;
  overflow: hidden;
  margin: 0;
  padding: 0;
  border: 2px solid rgba(255, 255, 255, 0.24);
}
.messages .message .avatar img {
  width: 100%;
  height: auto;
}
.messages .message.message-personal {
  float: right;
  color: grey;
  text-align: right;
  background: LightSkyBlue;
  border-radius: 10px 10px 0 10px;
  box-shadow: 5px 10px 18px 1px #888888;
  margin-right:20px;
}

.messages .message.message-personal::before {
  left: auto;
  right: 0;
  border-right: none;
  border-left: 5px solid transparent;
  border-top: 4px solid #257287;
  bottom: -4px;
}
.mCSB_scrollTools {
  margin: 1px -3px 1px 0;
  opacity: 0;
}

.mCSB_inside > .mCSB_container {
  margin-right: 0px;
  padding: 0 10px;
}

.mCSB_scrollTools .mCSB_dragger .mCSB_dragger_bar {
  background-color: rgba(0, 0, 0, 0.5) !important;
}
h1{
  color:blue;
}
      </style>
</head>
<center>
<body style="background: rgb(248,247,248);background: linear-gradient(180deg, rgba(248,247,248,1) 29%, rgba(195,237,248,1) 92%);">
<h1 style="color:LightSkyBlue;box-shadow: 5px 10px 18px 1px #888888;background:white;">All your previous conversations with the bot here</h1>
<div class="ariba" style="background:white">
<!-- display the messags stored as chat history from mongodb in the array details of app.js file-->
<% if(details!=null) { %>
<% details.forEach(function(item){ %>

<div class="messages">
  
    <div class="message message-personal" style="font-size:15px;color:black;font-weight:bold;float:right;"> <%= item.question%><br> <div style="font-size:10px;color:grey;font-weight:bold;float:right;"><%= item.time%></div> </div>
    <div class="message" style="font-size:15px;color:black;font-weight:bold;float:left;"> <figure class="avatar"><img src="https://tse3.mm.bing.net/th?id=OIP.ZaVWrkAV6pfRMAHiY-MqhQHaHi&pid=Api&P=0&w=300&h=300" /></figure>  <%= item.response %><br> <div style="font-size:10px;color:grey;font-weight:bold;float:left;"><%= item.time%></div></div>
    
    
    
     
    </div>
 

<% }) %>

<% } %>
 </div>  

<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.3/jquery.mCustomScrollbar.concat.min.js'></script>
  <script  src="../js/index.js"></script>
  </body>
  </center>
</html>